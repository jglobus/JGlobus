#/usr/bin/env bash

if [ ! -n "$GRIDSHIB_HOME" ] ; then
  GRIDSHIB_HOME=$(cd "`dirname $0`/.." && pwd)
fi

if [ ! -n "$GRIDSHIB_CONFIG" ] ; then
  GRIDSHIB_CONFIG=$GRIDSHIB_HOME/gridshib-bootstrap.properties
fi

java $JAVA_OPTS -Dgridshib.home=$GRIDSHIB_HOME -Dorg.globus.gridshib.config=$GRIDSHIB_CONFIG -cp "$GRIDSHIB_HOME/lib/*" org.teragrid.ncsa.gridshib.tool.gram.GRAMAuditTestTool "$@"
